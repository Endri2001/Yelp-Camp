<!-- we are injecting this code in the boilerplate-->
<!-- every time the express looks for edit it knows to go at the boilerplate-->
<%layout("layouts/boilerplate")%> 
<div class="row">
    <h2 class="text-center">Edit a Campground</h1>
        <div class="col-6 offset-3">
            <form class = "needs-validation" action="/campgrounds/<%=campground._id%>?_method=PUT" method = "POST" novalidate>
                <div class="mb-4">
                    <label class="form-label" for="title">Enter Title</label>
                    <input class="form-control" type="text" id="title" name="campground[title]" value="<%=campground.title%>" required>
                    
                    <div class="valid-feedback">
                        Title looks good!
                    </div>
                    <div class="invalid-feedback">
                        Select a valid title
                    </div>
                </div>
                <div class="mb-4">
                    <label class="form-label" for="location">Enter Location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]" value="<%=campground.location%>" required>
                    <div class="valid-feedback">
                        Location looks good!
                    </div>
                    <div class="invalid-feedback">
                        Select a valid Location
                    </div>
                </div>
                <div class="mb-4">
                    <label class="form-label" for="image">Enter Image URL</label>
                    <input class="form-control" type="text" id="image" name="campground[image]" value="<%=campground.image%>" required>
                    <div class="valid-feedback">
                        Image URL looks good!
                    </div>
                    <div class="invalid-feedback">
                        Select a valid Image Url
                    </div>
                </div>
                <div class="mb-4">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                        </div>
                        <input type="text" class="form-control" placeholder="Enter Price" id = "price" name ="campground[price]" value="<%=campground.price%>" required>
                        <div class="valid-feedback">
                            Price looks good!
                        </div>
                        <div class="invalid-feedback">
                            Select a valid Price
                        </div>
                    </div>
                </div>
                <div class="mb-4">
                    <label class="form-label" for="description">Enter Description</label>
                    <textarea class="form-control" name="campground[description]" id="description" cols="30"
                        rows="3" required><%=campground.description%></textarea>
                    
                    <div class="valid-feedback">
                        Description looks good!
                    </div>
                    <div class="invalid-feedback">
                        Select a valid description
                    </div>
                </div>
                <div class="mb-4">
                    <button class = "btn btn-primary">Update Camp</button>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
</div>

