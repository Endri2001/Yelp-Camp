<!-- by default we start at folder views like defined in app.js hence no ../ -->
<%layout("layouts/boilerplate")%> 
<h1>All campgrounds</h1>
<div class = "mb-4">
    <a class = "btn btn-success" href="/campgrounds/new">Add a camp</a>
</div>

<ul>
    <% for(let camp of data){ %>
        <div class="card">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%=camp.image%>" alt="" class = "img-fluid">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class = "card-title"><%=camp.title%></h5>
                        <p class = "card-text"><%=camp.description%></p>
                        <p class = "card-text">
                            <small class = "text-muted"><%=camp.location%></small>
                        </p>
                        <a href="/campgrounds/<%=camp._id%>"class = "btn btn-secondary">View <%=camp.title%></a>
                    </div>
                </div>
            </div>
        </div>
    <% } %> 
</ul> 
